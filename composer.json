{
  "name": "mishusoft/website",
  "description": "Official website of Mishusoft",
  "homepage": "https://www.mishusoft.com/",
  "license": "proprietary",
  "authors": [
    {
      "name": "Al-Amin Ahamed (Abir)",
      "email": "alamin.rohita@hotmail.com",
      "role": "Developer"
    },
    {
      "name": "Mishusoft System Inc",
      "email": "support@mishusoft.com"
    }
  ],
  "support": {
    "email": "support@mishusoft.com",
    "issues": "https://www.mishusoft.com/framework-sample/issues",
    "source": "https://www.mishusoft.com/framework-sample"
  },
  "config": {
    "sort-order": true
  },
  "autoload": {
    "psr-4": {
      "Mishusoft\\": "Mishusoft/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "\\": "Sources/"
    }
  },
  "scripts": {

    "update:composer": "composer self-update",
    "update:composer.pacakges": "composer update",
    "update:composer.packages.global": "composer /home/abir/.config/composer update",

    "update:robots": "php ./Sources/Release.php -compile -s ./Sources/robots.txt -d /srv/http/robots.txt",
    "update:index.php": "php ./Sources/Release.php -compile -s ./Sources/app.php -d /srv/http/index.php",
    "update:index.html": "php ./Sources/Release.php -compile -s ./Sources/app.html -d /srv/http/index.html",
    "update:framework": "php ./Sources/Release.php -compile -s ./Sources/Mishusoft/Framework -d /srv/http/Mishusoft/Framework",
    "update:ema": "php ./Sources/Release.php -compile -s ./Sources/Mishusoft/Ema -d /srv/http/Mishusoft/Ema",
    "update:packages": "php ./Sources/Release.php -compile -s ./Sources/Mishusoft/Packages -d /srv/http/Packages",
    "update:themes": "php ./Sources/Release.php -compile-themes -s ./Sources/Mishusoft/Views/Themes -d /srv/http/Mishusoft/Themes",
    "update:widgets": "php ./Sources/Release.php -compile -s ./Sources/Mishusoft/Widgets -d /srv/http/Mishusoft/Widgets",
    "update:widgets.components": "php ./Sources/Release.php -compile-widgets -s ./Sources/Mishusoft/Views/Widgets -d /srv/http/Mishusoft/Widgets/Views",
    "update:packages.components": "php ./Sources/Release.php -static -s ./Sources/Mishusoft/Views/Templates/Packages -d /srv/http/Packages",


    "update:test:index.php": "php ./Sources/Release.php -test -s ./Sources/app.php -d /srv/http/index.php",
    "update:test:index-html": "php ./Sources/Release.php -test -s ./Sources/app.html -d /srv/http/index.html",
    "update:test:framework": "php ./Sources/Release.php -test -s ./Sources/Mishusoft/Framework -d /srv/http/Mishusoft/Framework",
    "update:test:ema": "php ./Sources/Release.php -test -s ./Sources/Mishusoft/Ema -d /srv/http/Mishusoft/Ema",
    "update:test:packages": "php ./Sources/Release.php -test -s ./Sources/Mishusoft/Packages -d /srv/http/Packages",
    "update:test:themes": "php ./Sources/Release.php -test-themes -s ./Sources/Mishusoft/Views/Themes -d /srv/http/Mishusoft/Themes",
    "update:test:widgets": "php ./Sources/Release.php -test -s ./Sources/Mishusoft/Widgets -d /srv/http/Mishusoft/Widgets",
    "update:test:widgets.components": "php ./Sources/Release.php -test-widgets -s ./Sources/Mishusoft/Views/Widgets -d /srv/http/Mishusoft/Widgets/Views",
    "update:test:packages.components": "php ./Sources/Release.php -static -s ./Sources/Mishusoft/Views/Templates/Packages -d /srv/http/Packages",

    "test:user.agent": [
      "Composer\\Config::disableProcessTimeout",
      "php tests/user-agent-test.php > tmp/user.agent.log"
    ],
    "test:download:user.agent": [
      "Composer\\Config::disableProcessTimeout",
      "php tests/user-agent-download.php"
    ],


    "copy:storages.all": "php ./Sources/Release.php -copy -s ./Storages/ -d /srv/http/Storages/",
    "copy:assests": "php ./Sources/Release.php -copy -s ./Storages/0/assets -d /srv/http/Storages/0/assets",
    "copy:media": "php ./Sources/Release.php -copy -s ./Sources/Assets/media -d /srv/http/Storages/0/media",
    "copy:errors.page": "php ./Sources/Release.php -copy -s ./Sources/Mishusoft/Views/Errors/SHtml -d /srv/http/Mishusoft/Errors",
    "copy:geoip-db": "sudo -S geoipupdate && sudo cp -r /var/lib/GeoIP ./Storages/0/GeoIP",

    "start:server.dev": [
      "Composer\\Config::disableProcessTimeout",
      "php -S localhost:8080 router.php"
    ],

    "phpcs": "phpcs",
    "phpcbf": "phpcbf"
  },
  "require": {
    "php": "8.*",
    "verot/class.upload.php": "^2.1",
    "stripe/stripe-php": "^7.77",
    "phpmailer/phpmailer": "^6.4",
    "smarty/smarty": "^3.1",
    "geoip2/geoip2": "^2.11"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "ext-zend-opcache": "*",
    "ext-json": "*",
    "ext-zip": "*",
    "ext-openssl": "*",
    "ext-dom": "*",
    "ext-curl": "*",
    "ext-pdo": "*",
    "ext-mysqli": "*",
    "ext-intl": "*",
    "ext-gd": "*",
    "ext-fileinfo": "*",
    "ext-yaml": "*"
  }
}
