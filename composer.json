{
  "name": "mishusoft/website",
  "description": "Official website of Mishusoft",
  "homepage": "https://www.mishusoft.com/",
  "license": "proprietary",
  "authors": [
    {
      "name": "Al-Amin Ahamed (Abir)",
      "email": "alamin.rohita@hotmail.com",
      "role": "Developer"
    },
    {
      "name": "Mishusoft System Inc",
      "email": "support@mishusoft.com"
    }
  ],
  "support": {
    "email": "support@mishusoft.com",
    "issues": "https://www.mishusoft.com/framework-sample/issues",
    "source": "https://www.mishusoft.com/framework-sample"
  },
  "config": {
    "sort-order": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Mishusoft\\": "framework/Mishusoft"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\": "sources/mishusoft-company/Application",
      "Mishusoft\\": "sources/mishusoft-company/Framework/Mishusoft"
    }
  },
  "scripts": {
    "create:app": ["@update:cli","@update:api","@update:packages", "@update:packages.components","@update:themes","@update:widgets","@update:widgets.components"],

    "copy:storages.all": "php ./Sources/mishusoft-company/Release.php -copy -s ./storages/ -d ./storages/",
    "copy:assests": "php ./Sources/mishusoft-company/Release.php -copy -s ./Sources/Assets -d ./storages/app/assets",
    "copy:media": "php ./Sources/mishusoft-company/Release.php -copy -s ./Sources/Assets/media -d ./storages/app/media",
    "copy:errors.page": "php ./Sources/mishusoft-company/Release.php -copy -s ./Sources/Mishusoft/Views/Errors/SHtml -d ./app/views/errors",
    
    "update:composer": "composer self-update",
    "update:composer.pacakges": "composer update",
    "update:composer.packages.global": "composer /home/abir/.config/composer update",

    "update:robots": "php cli update:robots ./sources/mishusoft-company/public/robots.txt ./public_html/robots.txt",
    "update:index.php": "php cli update:indexPHP ./sources/mishusoft-company/public/app.php ./public_html/index.php",
    "update:index.html": "php cli update:indexHTML ./sources/mishusoft-company/public/app.html ./public_html/index.html",
    "update:framework": "php cli update:framework ./sources/mishusoft-company/Framework ./framework",

    "update:cli": "php cli update:cli ./sources/mishusoft-company/Application/CliSurface ./app/CliSurface",

    "update:api": "php ./Sources/mishusoft-company/Release.php -compile -s ./Sources/mishusoft-company/Application/QualifiedAPIRoutes -d ./app/QualifiedAPIRoutes",
    "update:ema": "php ./Sources/mishusoft-company/Release.php -compile -s ./Sources/mishusoft-company/Application/Packages/Ema -d ./app/Packages/Ema",
    "update:ema.loader": "php ./Sources/mishusoft-company/Release.php -compile -s ./Sources/mishusoft-company/Application/Packages/Ema.loader.php -d ./app/Packages/Ema.loader.php",
    "update:packages": "php ./Sources/mishusoft-company/Release.php -compile -s ./Sources/mishusoft-company/Application/Packages -d ./app/Packages",
    "update:themes": "php ./Sources/mishusoft-company/Release.php -compile-themes -s ./Sources/mishusoft-company/Application/Views/Themes -d ./app/Themes",
    "update:widgets": "php ./Sources/mishusoft-company/Release.php -compile -s ./Sources/mishusoft-company/Application/Widgets -d ./app/Widgets",
    "update:widgets.components": "php ./Sources/mishusoft-company/Release.php -compile-widgets -s ./Sources/mishusoft-company/Application/Views/Widgets -d ./app/Widgets/Views",
    "update:packages.components": "php ./Sources/mishusoft-company/Release.php -static -s ./Sources/mishusoft-company/Application/Views/Templates/Packages -d ./app/Packages && @update:packages",


    "update:test:index.php": "php ./Sources/mishusoft-company/Release.php -test -s ./Sources/app.php -d ./public_html/index.php",
    "update:test:index-html": "php ./Sources/mishusoft-company/Release.php -test -s ./Sources/app.html -d ./public_html/index.html",
    "update:test:framework": "php ./Sources/mishusoft-company/Release.php -test -s ./Sources/mishusoft-company/Framework -d ./Framework",
    "update:test:ewUrl": "php ./Sources/mishusoft-company/Release.php -test -s ./Sources/Mishusoft/Application/EmbeddedWebUrlDirectory -d ./app/QualifiedAPIRoutes",
    "update:test:ema": "php ./Sources/mishusoft-company/Release.php -test -s ./Sources/Mishusoft/Application/Packages/Ema -d ./app/Packages/Ema",
    "update:test:packages": "php ./Sources/mishusoft-company/Release.php -test -s ./Sources/Mishusoft/Application/Packages -d ./app/Packages",
    "update:test:themes": "php ./Sources/mishusoft-company/Release.php -test-themes -s ./Sources/mishusoft-company/Application/Views/Themes -d ./app/Themes",
    "update:test:widgets": "php ./Sources/mishusoft-company/Release.php -test -s ./Sources/Mishusoft/Widgets -d ./public_html/app/Widgets",
    "update:test:widgets.components": "php ./Sources/mishusoft-company/Release.php -test-widgets -s ./Sources/mishusoft-company/Application/Views/Widgets -d ./app/Widgets/Views",
    "update:test:packages.components": "php ./Sources/mishusoft-company/Release.php -static -s ./Sources/mishusoft-company/Application/Views/Templates/Packages -d ./app/Packages",


    "upgrade:db:geoip": "geoipupdate && cp -r /var/lib/GeoIP ./storages/framework/data-drive",
    "upgrade:db:ua": "php ./Sources/mishusoft-company/Release.php -upgrade -s ./Sources/mishusoft-company/Application/Views/Templates/Packages -d ./app/Packages",
    "upgrade:media:mime": "php ./Sources/mishusoft-company/Release.php -upgrade -s ./Sources/mishusoft-company/Application/Views/Templates/Packages -d ./app/Packages",

    "release.app": [
      "Composer\\Config::disableProcessTimeout",
      "vendor/bin/rector process app"
    ],

    "release.framework": [
      "Composer\\Config::disableProcessTimeout",
      "vendor/bin/rector process framework"
    ],

    "start:server.dev": [
      "Composer\\Config::disableProcessTimeout",
      "php -S localhost:8080 router.php"
    ],

    "test:user.agent": [
      "Composer\\Config::disableProcessTimeout",
      "php tests/user-agent-test.php > tmp/user.agent.log"
    ],
    "test:download:user.agent": [
      "Composer\\Config::disableProcessTimeout",
      "php tests/user-agent-download.php"
    ],

    "phpcs": "phpcs",
    "phpcbf": "phpcbf"
  },
  "require": {
    "php": ">=7.4",
    "verot/class.upload.php": "^2.1",
    "stripe/stripe-php": "^7.77",
    "phpmailer/phpmailer": "^6.4",
    "smarty/smarty": "^3.1",
    "geoip2/geoip2": "^2.11",
    "ext-openssl": "*",
    "ext-yaml": "*",
    "ext-zend-opcache": "*",
    "ext-json": "*",
    "ext-zip": "*",
    "ext-dom": "*",
    "ext-curl": "*",
    "ext-pdo": "*",
    "ext-mysqli": "*",
    "ext-intl": "*",
    "ext-gd": "*",
    "ext-fileinfo": "*"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.6",
    "rector/rector": "^0.11.38",
    "friendsofphp/php-cs-fixer": "^3.0",
    "ext-calendar": "*"
  }
}
